---
apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: cilium
  namespace: kube-system
spec:
  chart: cilium
  repo: https://helm.cilium.io/
  version: {{ cilium.version }}
  targetNamespace: kube-system
  bootstrap: true
  valuesContent: |-
    config:
    #   svcSourceRangeCheck: false
    #   ipam: kubernetes
    #   enableIdentityMark: false
      bpfMasquerade: false
    global:
      registry: {{ cilium.registry }}
      tag: v{{ cilium.version }}
      pullPolicy: IfNotPresent
      k8sServiceHost: {{ k3s_control_node_address }}
      k8sServicePort: 6443
      tunnel: disabled
      masquerade: false
      autoDirectNodeRoutes: true
      kubeProxyReplacement: strict
      # nativeRoutingCIDR: "192.168.42.0/24"
      endpointRoutes:
        enabled: true
      hostServices:
        enabled: true
      enableHealthCheckNodeport: true
      nodePort:
        enabled: true
        mode: dsr
      hostPort:
        enabled: true
      externalIPs:
        enabled: true
      sockops:
        enabled: true
      ipam:
        operator:
          clusterPoolIPv4PodCIDR: "{{ k3s_cluster_cidr }}"
          clusterPoolIPv4MaskSize: 24
      containerRuntime:
        integration: containerd
        socketPath: /var/run/k3s/containerd/containerd.sock
      # bpf:
      #   preallocateMaps: true
      hubble:
        enabled: true
        ui:
          enabled: true
        relay:
          enabled: true
        metrics:
          enabled:
          - dns
          - drop
          - tcp
          - flow
          - port-distribution
          - icmp
          - http
